{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["**/*.spec.js"],
      "rules": {
        "max-nested-callbacks": [2, 4],
        "max-statements": [2, 50]
      },
      "env": {
        "jest": true,
        "jasmine": true
      }
    }
  ],
  "plugins": ["react", "flowtype", "jest", "promise"],
  "settings": {
    "react": {
      "version": "16.3.0"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": 0,
    "no-plusplus": 0,
    "react/no-deprecated": 2,
    "react/jsx-filename-extension": 0,
    "react/require-default-props": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "import/named": 0,
    "no-restricted-syntax": [2, "WithStatement", "ClassDeclaration"]
  }
}
